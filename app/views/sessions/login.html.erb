<div class="col-sm-offset-3">
  <div class="col-sm-7">
    <div class="well">
      <h2>Sign into Superhero!</h2><br>
      <%= form_tag login_path do %>
        <div class="form-group">
          <%= label_tag :username, nil, class:"control-label" %>
          <%= text_field_tag :username, params[:username], autofocus: true, class:"form-control" %>
        </div>

        <div class="form-group">
          <%= label_tag :password, nil, class:"control-label" %>
          <%= password_field_tag :password, params[:password], class:"form-control" %>
        </div>

        <%= submit_tag "Log in", id:"submit-user", class:"btn btn-block btn-primary" %>
      <% end %>
      <%= link_to "Don't have an account? Sign up here", signup_path %>

      <p>
  <%= link_to "Forgot your password?", new_reset_path%>
</p>
    </div>
  </div>
</div>
